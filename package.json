        "lintfix": "npm run lint -- --fix",
        "stylelint": "stylelint 'src/**/*.{css,tsx}'",
        "stylelintfix": "npm run stylelint -- --fix",
        "format": "pnpm run lintfix && pnpm run stylelintfix",
        "preview": "vite preview",
        "previewsub": "vite preview --base=/Coleophora/",
        "pretty": "prettier --write ."
